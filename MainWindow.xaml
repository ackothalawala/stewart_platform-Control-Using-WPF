<Window x:Class="stewart_platform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stewart_platform"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">

                <GroupBox Header="Hardware Connection" Margin="0,0,0,20" Padding="10">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="PortSelector" Width="120" Margin="0,0,10,0"/>
                        <Button x:Name="BtnConnect" Content="Connect" Width="80" Click="BtnConnect_Click"/>
                        <Button x:Name="BtnReset" Content="Reset Zero" Width="80" Margin="10,0,0,0" Click="BtnReset_Click" Background="#FFDDDD"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Translation (mm)" Margin="0,0,0,10" Padding="10">
                    <StackPanel>
                        <Label Content="Position X"/>
                        <Slider x:Name="SldPosX" Minimum="-35" Maximum="35" Value="0" ValueChanged="Slider_ValueChanged"/>

                        <Label Content="Position Y"/>
                        <Slider x:Name="SldPosY" Minimum="-35" Maximum="35" Value="0" ValueChanged="Slider_ValueChanged"/>

                        <Label Content="Position Z"/>
                        <Slider x:Name="SldPosZ" Minimum="-35" Maximum="35" Value="0" ValueChanged="Slider_ValueChanged"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Rotation (Degrees)" Margin="0,0,0,10" Padding="10">
                    <StackPanel>
                        <Label Content="Rotation X (Roll)"/>
                        <Slider x:Name="SldRotX" Minimum="-30" Maximum="30" Value="0" ValueChanged="Slider_ValueChanged"/>

                        <Label Content="Rotation Y (Pitch)"/>
                        <Slider x:Name="SldRotY" Minimum="-30" Maximum="30" Value="0" ValueChanged="Slider_ValueChanged"/>

                        <Label Content="Rotation Z (Yaw)"/>
                        <Slider x:Name="SldRotZ" Minimum="-30" Maximum="30" Value="0" ValueChanged="Slider_ValueChanged"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <GroupBox Header="Calculated Servo Angles (Degrees)" Padding="10">
                    <StackPanel>
                        <TextBlock x:Name="TxtServo0" Text="Servo 0: 0.00" FontSize="16" Margin="0,5"/>
                        <TextBlock x:Name="TxtServo1" Text="Servo 1: 0.00" FontSize="16" Margin="0,5"/>
                        <TextBlock x:Name="TxtServo2" Text="Servo 2: 0.00" FontSize="16" Margin="0,5"/>
                        <TextBlock x:Name="TxtServo3" Text="Servo 3: 0.00" FontSize="16" Margin="0,5"/>
                        <TextBlock x:Name="TxtServo4" Text="Servo 4: 0.00" FontSize="16" Margin="0,5"/>
                        <TextBlock x:Name="TxtServo5" Text="Servo 5: 0.00" FontSize="16" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <TextBlock Text="Status:" Margin="0,20,0,5" FontWeight="Bold"/>
                <TextBlock x:Name="TxtStatus" Text="Disconnected" Foreground="Red"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
