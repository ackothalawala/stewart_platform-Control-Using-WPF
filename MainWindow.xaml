<Window x:Class="stewart_platform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="http://helix-toolkit.org/wpf"
        Title="Stewart Platform V2" Height="600" Width="1000" Background="#F0F0F0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <GroupBox Header="Hardware" Margin="0,0,0,10" Padding="5">
                    <StackPanel>
                        <ComboBox x:Name="PortSelector" Margin="0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnConnect" Content="Connect" Width="100" Click="BtnConnect_Click"/>
                            <Button x:Name="BtnReset" Content="Reset" Width="100" Margin="10,0,0,0" Click="BtnReset_Click" Background="#FFDDDD"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtStatus" Text="Disconnected" FontWeight="Bold" Margin="0,5,0,0" Foreground="Red"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Position (mm)" Margin="0,0,0,10" Padding="5">
                    <StackPanel>
                        <Label Content="X Translation"/>
                        <Slider x:Name="SldPosX" Minimum="-35" Maximum="35" ValueChanged="Slider_ValueChanged"/>
                        <Label Content="Y Translation"/>
                        <Slider x:Name="SldPosY" Minimum="-35" Maximum="35" ValueChanged="Slider_ValueChanged"/>
                        <Label Content="Z Translation"/>
                        <Slider x:Name="SldPosZ" Minimum="-35" Maximum="35" ValueChanged="Slider_ValueChanged"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Rotation (Deg)" Margin="0,0,0,10" Padding="5">
                    <StackPanel>
                        <Label Content="Roll (X)"/>
                        <Slider x:Name="SldRotX" Minimum="-30" Maximum="30" ValueChanged="Slider_ValueChanged"/>
                        <Label Content="Pitch (Y)"/>
                        <Slider x:Name="SldRotY" Minimum="-30" Maximum="30" ValueChanged="Slider_ValueChanged"/>
                        <Label Content="Yaw (Z)"/>
                        <Slider x:Name="SldRotZ" Minimum="-30" Maximum="30" ValueChanged="Slider_ValueChanged"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Servo Data" Padding="5">
                    <StackPanel>
                        <TextBlock x:Name="TxtServo0" Text="S0: 0.00"/>
                        <TextBlock x:Name="TxtServo1" Text="S1: 0.00"/>
                        <TextBlock x:Name="TxtServo2" Text="S2: 0.00"/>
                        <TextBlock x:Name="TxtServo3" Text="S3: 0.00"/>
                        <TextBlock x:Name="TxtServo4" Text="S4: 0.00"/>
                        <TextBlock x:Name="TxtServo5" Text="S5: 0.00"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <helix:HelixViewport3D Grid.Column="1" ZoomExtentsWhenLoaded="True" Background="#333">
            <helix:SunLight/>

            <helix:GridLinesVisual3D Width="200" Length="200" MajorDistance="50" MinorDistance="10" Thickness="0.5" Fill="#555"/>

            <helix:TubeVisual3D x:Name="VisBase" Diameter="5" Fill="LightGreen"/>

            <helix:TubeVisual3D x:Name="VisPlatform" Diameter="5" Fill="LightBlue"/>

            <helix:TubeVisual3D x:Name="VisHorn0" Diameter="2" Fill="Red"/>
            <helix:TubeVisual3D x:Name="VisHorn1" Diameter="2" Fill="Red"/>
            <helix:TubeVisual3D x:Name="VisHorn2" Diameter="2" Fill="Red"/>
            <helix:TubeVisual3D x:Name="VisHorn3" Diameter="2" Fill="Red"/>
            <helix:TubeVisual3D x:Name="VisHorn4" Diameter="2" Fill="Red"/>
            <helix:TubeVisual3D x:Name="VisHorn5" Diameter="2" Fill="Red"/>

            <helix:TubeVisual3D x:Name="VisRod0" Diameter="1.5" Fill="White"/>
            <helix:TubeVisual3D x:Name="VisRod1" Diameter="1.5" Fill="White"/>
            <helix:TubeVisual3D x:Name="VisRod2" Diameter="1.5" Fill="White"/>
            <helix:TubeVisual3D x:Name="VisRod3" Diameter="1.5" Fill="White"/>
            <helix:TubeVisual3D x:Name="VisRod4" Diameter="1.5" Fill="White"/>
            <helix:TubeVisual3D x:Name="VisRod5" Diameter="1.5" Fill="White"/>

        </helix:HelixViewport3D>
    </Grid>
</Window>